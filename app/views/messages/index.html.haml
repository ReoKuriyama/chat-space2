.contents
  .sidebar
    .sidebar-above
      .wrap2
        .sidebar-above__top
          %h2=current_user.name
          = link_to edit_user_registration_path do
            = fa_icon "cog"
          %a
          = link_to new_group_path do
            = fa_icon "pencil-square-o"
    .sidebar-bottom
      %ul.chat-groups
        - @groups.each do |group|

          %li.chat-group
            %a.chat-group__link{href: group_messages_path(group)}
              %p.chat-group__name= group.group_name
              %p.chat-group__intro
                = group.last_message_body

  .main
    .main-above
      .wrap
        .main-above__top
          = link_to edit_group_path(@group) do
            Edit
        %h2=@group.group_name
        %p Members:
        - @group.users.each do |user|
          %span=user.name
    .main-bottom
      .wrap
        %ul
          - @group.messages.each do |message|
            %li
              .chat-body
                %p.chat-body__username=message.user.name
                %p.chat-body__time=message.created_at
              %p.chat-body__message=message.body
        .new-message
          = form_for [@group, @message], class: 'new-message-form' do |f|
            .new-message-form__body
              = f.text_area :body, row: 1, placeholder: "type a message"
              %label.new-message-form__body-file
                %input#message_image{name: "message[image]", type: "file"}/
                = fa_icon "picture-o"
            = f.submit 'Send', id: 'form-send'
