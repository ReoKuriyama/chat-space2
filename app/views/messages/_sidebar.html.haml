.sidebar
  .sidebar-above
    .wrap2
      .sidebar-above__top
        %h2=current_user.name
        = link_to edit_user_registration_path do
          = fa_icon "cog"
        %a
        = link_to new_group_path do
          = fa_icon "pencil-square-o"
  .sidebar-bottom
    %ul.chat-groups
      - @groups.each do |group|

        %li.chat-group
          = link_to group_messages_path(group), class: 'chat-group__link' do
            %p.chat-group__name= group.group_name
            %p.chat-group__intro
              = group.last_message_body
